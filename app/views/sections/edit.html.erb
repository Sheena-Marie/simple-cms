<% @page_title = "Edit Section" %>
<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

  <div class="section edit">
    <h2>Update section</h2>

    <%= form_for(:section, :url => {:action => 'update', :id => @section.id}) do |f| %>

    <table>

      <tr>
        <th>Page ID</th>
        <td><%= f.text_field(:page_id) %>
      </tr>

      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>

      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %>
      </tr>

      <tr>
        <th>Visible</th>
        <td><%= f.text_field(:visible) %></td>
      </tr>

      <tr>
        <th>Content Type</th>
        <td><%= f.text_field(:content_type) %></td>
      </tr>

      <tr>
        <th>Content</th>
        <td><%= f.text_field(:content) %></td>
      </tr>

    </table>

    <div class="form-buttons">
      <%= submit_tag("Update Page") %>
    </div>

  <% end %>
</div>
